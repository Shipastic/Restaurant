@model IEnumerable<Restaurant.Web.Models.ProductDto>

    <br /><br />
    <div class="container p-4 border">
        <div class="row pb-2">
            <div class="col">
                <h1 class="text-primary">Список блюд</h1>
            </div>
            <div class="col text-end pt-1">
                <a asp-action="Create" class="btn btn-outline-primary"><i class="fas fa-plus"></i>Добавить новое блюдо </a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                       Название блюда
                    </th>
                    <th>
                        Категория блюда
                    </th>
                    <th>
                       Стоимость
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                       
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
