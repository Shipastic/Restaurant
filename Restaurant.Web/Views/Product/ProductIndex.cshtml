@model IEnumerable<Restaurant.Web.Models.ProductDto>

    <br /><br />
    <div class="container p-4 border">
        <div class="row pb-2">
            <div class="col">
                <h1 class="text-primary">Меню ресторана</h1>
            </div>
            <div class="col text-end pt-1">
                <a asp-action="ProductCreate" class="btn btn-outline-primary"><i class="fas fa-plus"></i>Добавить новое блюдо </a>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                       Название блюда
                    </th>
                    <th>
                        Категория блюда
                    </th>
                    <th>
                       Стоимость
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td>
                        @((item.Price).ToString("c"))
                    </td>
                    <td>
                       <a asp-action="EditProduct" class="btn btn-success" asp-route-productId="@item.ProductId">
                           <i class="fa fa-edit"></i>
                       </a>
                        <a asp-action="DeleteProduct" class="btn btn-danger" asp-route-productId="@item.ProductId">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
